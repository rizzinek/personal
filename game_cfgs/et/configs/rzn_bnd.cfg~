unbindall

set rtime "timerset 30"
set btime "timerset 20"

//1)Movement
bind w "+forward"
bind s "+back"
bind a "+moveleft"
bind d "+moveright"
bind SHIFT "+sprint"
bind c "+movedown"
bind q "+leanleft"
bind e "+leanright"
bind x "+prone"
bind CTRL "+speed"
bind SPACE "+moveup"

//2)Actions
//set pewpew_on "+attack;+sprint"
//set pewpew_off "-attack;-sprint"
//bind MOUSE1 "+vstr pewpew_on pewpew_off"
bind MOUSE1 "+attack"
bind MOUSE2 "+movedown"
bind MOUSE3 "weapalt"
bind r "+reload"
bind t "kill;forcetapout"
bind f "+zoom; +attack; -attack; -zoom"

//3)Weapons
bind 0 "weaponbank 10"
